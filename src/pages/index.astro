---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: "Shivek's Portfolio",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'View My Projects',
        href: '#projects',
        icon: 'tabler:code',
      },
      { text: 'About Me', href: '#about' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Hero Image' }}
  >
    <Fragment slot="title">
      Hi, I am <span class="text-accent dark:text-white highlight">Shivek</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        A Computer Science student passionate about <b>Cybersecurity</b>, <b>Node.js</b>, and <b>C++</b>. 
        I build secure backend systems and love solving complex algorithmic problems.</span
      >
    </Fragment>
  </Hero>

  <Note title="Current Focus:" description="Exploring Network Security, Forensics, and Scalable Web Architecture." />

  <Features2
    title="Skills & Technologies"
    subtitle="My technical toolkit for development and security."
    items={[
      {
        title: 'Core Languages',
        description: 'C++, Python, SQL, JavaScript (ES6+)',
        icon: 'tabler:code',
      },
      {
        title: 'Backend Development',
        description: 'Node.js, Express, REST APIs, JWT Authentication',
        icon: 'tabler:server',
      },
      {
        title: 'Cybersecurity',
        description: 'Kali Linux, Network Security, Forensics, Wireshark',
        icon: 'tabler:lock',
      },
      {
        title: 'Tools & Platforms',
        description: 'Git/GitHub, VS Code, Vercel, LaTeX, Postman',
        icon: 'tabler:terminal-2',
      },
      {
        title: 'Computer Science',
        description: 'Data Structures, Algorithms, Operating Systems, OOP',
        icon: 'tabler:math-function',
      },
      {
        title: 'Soft Skills',
        description: 'Problem Solving, Technical Writing, Team Collaboration',
        icon: 'tabler:users',
      },
    ]}
  />

  <Content
    id="projects"
    isReversed
    tagline="Featured Project"
    title="Secure Node.js Backend"
    items={[
      {
        title: 'Authentication & Security',
        description:
          'Implemented secure user login using JWT (JSON Web Tokens) and bcrypt for password hashing. Focused on preventing common vulnerabilities.',
      },
      {
        title: 'Architecture',
        description:
          'Designed a RESTful API with Node.js and Express to handle user data and session management efficiently.',
      },
      {
        title: 'Tech Stack',
        description:
          'Node.js, Express, MongoDB, Postman.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Coding Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Backend Attack Simulation</h3>
      A project focused on building and securing web infrastructure.
    </Fragment>
  </Content>

  <Steps
    id="about"
    title="Education & Certifications"
    items={[
      {
        title: 'Bachelor of Technology in Computer Science',
        description:
          "Currently pursuing my degree with a focus on Operating Systems, Networks, and Algorithms.",
        icon: 'tabler:school',
      },
      {
        title: 'Certifications',
        description:
          "<b>Working with Image Data</b> - Coursera (Aug 2025)<br/>Relevant coursework in Digital Imaging and processing.",
        icon: 'tabler:certificate',
      },
      {
        title: 'Research & Writing',
        description:
          'Authored an IEEE-format term paper on "Agile Training and Certification Programs: Industry Relevance". Skilled in LaTeX for technical documentation.',
        icon: 'tabler:file-text',
      },
      {
        title: 'Ready for new challenges!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1434030216411-0b793f4b4173?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Education image',
    }}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Visit my GitHub',
        href: 'https://github.com/shivek2707', 
        target: '_blank',
        icon: 'tabler:brand-github',
      },
    ]}
  >
    <Fragment slot="title">
      Let's Connect
    </Fragment>

    <Fragment slot="subtitle">
      I am always open to discussing new projects, creative ideas, or opportunities in cybersecurity and development.
    </Fragment>
  </CallToAction>
</Layout>
