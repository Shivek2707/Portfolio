---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: "Shivek's Portfolio",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'View My Projects',
        href: '#projects',
        icon: 'tabler:code',
      },
      { text: 'About Me', href: '#about' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Hero Image' }}
  >
    <Fragment slot="title">
      Hi, I am <span class="text-accent dark:text-white highlight">Shivek Singh</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Cybersecurity professional working across cloud and backend development, with expertise in securing enterprise systems, authentication flows, and resilient architectures. Focused on building scalable, secure solutions while evolving into a holistic security and cloud architect.
      </span>
    </Fragment>
  </Hero>

  <Note title="Core Focus:" description="Building scalable, secure solutions & evolving into a holistic security architect." />

  <Content
    id="about"
    columns={1}
    image={{
      src: '~/assets/images/Shivek photo.jpg',
      alt: 'Shivek Singh',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">About Me</h3>
      <p class="mb-4 text-muted dark:text-slate-400">
        Passionate about cybersecurity, cloud, and backend systems. Skilled in session tracking, RBAC, OSINT automation, and backend persistence.
      </p>
      <p class="mb-4 text-muted dark:text-slate-400">
        Persistent learner who values clarity, documentation, and collaboration, thriving on experimentation and continuous improvement.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Features2
    id="skills"
    title="Skills & Technologies"
    subtitle="My technical toolkit for development and security."
    items={[
      {
        title: 'Core Languages',
        description: 'C++, Python, SQL, JavaScript (ES6+)',
        icon: 'tabler:code',
      },
      {
        title: 'Backend Development',
        description: 'Node.js, Express, REST APIs, JWT Authentication',
        icon: 'tabler:server',
      },
      {
        title: 'Cybersecurity',
        description: 'Kali Linux, Network Security, Forensics, Wireshark',
        icon: 'tabler:lock',
      },
      {
        title: 'Tools & Platforms',
        description: 'Git/GitHub, VS Code, Vercel, LaTeX, Postman',
        icon: 'tabler:terminal-2',
      },
      {
        title: 'Computer Science',
        description: 'Data Structures, Algorithms, Operating Systems, OOP',
        icon: 'tabler:math-function',
      },
      {
        title: 'Soft Skills',
        description: 'Problem Solving, Technical Writing, Team Collaboration',
        icon: 'tabler:users',
      },
    ]}
  />

  <Content
    id="projects"
    isReversed
    tagline="Featured Project"
    title="Secure Node.js Backend"
    items={[
      {
        title: 'Authentication & Security',
        description:
          'Implemented secure user login using JWT (JSON Web Tokens) and bcrypt for password hashing. Focused on preventing common vulnerabilities.',
      },
      {
        title: 'Architecture',
        description:
          'Designed a RESTful API with Node.js and Express to handle user data and session management efficiently.',
      },
      {
        title: 'Tech Stack',
        description:
          'Node.js, Express, MongoDB, Postman.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Coding Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Backend Attack Simulation</h3>
      A project focused on building and securing web infrastructure.
    </Fragment>
  </Content>

  <Steps
    title="Education"
    items={[
      {
        title: 'Bachelor of Technology (B.Tech) - Information Technology',
        description:
          "<b>Lovely Professional University</b><br/>Jalandhar, Punjab | Aug 2023 - Present<br/>Current CGPA: 6.8",
        icon: 'tabler:school',
      },
      {
        title: 'Intermediate (12th Grade)',
        description:
          "<b>SBSJIC, Sambhal</b><br/>Uttar Pradesh | Apr 2021 - Mar 2023<br/>Percentage: 90%",
        icon: 'tabler:school',
      },
      {
        title: 'Matriculation (10th Grade)',
        description:
          "<b>SBSJIC, Sambhal</b><br/>Uttar Pradesh | Apr 2020 - Mar 2021<br/>Percentage: 80%",
        icon: 'tabler:school',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1434030216411-0b793f4b4173?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Education image',
    }}
  />

  <Steps
    id="certifications"
    title="Certifications & Courses"
    isReversed={true}
    items={[
      {
        title: 'Red Hat System Administration I & II',
        description: `<b>RH124 and RH134</b> - Red Hat<br/>Comprehensive training in Linux system administration.<br/>
        <a href="https://www.credly.com/badges/82e382a3-3e34-4d3b-a783-90ddd3214e33" target="_blank" class="text-accent hover:underline font-bold">View Credential</a>`,
        icon: 'tabler:certificate',
      },
      {
        title: 'SQL Injection Attacks',
        description: `<b>EC-Council</b><br/>Focused on detecting and preventing SQL injection vulnerabilities.<br/>
        <a href="https://retired-coffee-ydlhg9izxv.edgeone.app/SQL%20Injection%20attacks.png" target="_blank" class="text-accent hover:underline font-bold">View Certificate</a>`,
        icon: 'tabler:shield-check',
      },
      {
        title: 'SQL (Basic & Intermediate)',
        description: `<b>HackerRank</b><br/>Verified skills in complex queries, joins, and database management.<br/>
        <a href="https://www.hackerrank.com/certificates/452f43c5d28b" target="_blank" class="text-accent hover:underline font-bold">View Certificate</a>`,
        icon: 'tabler:database',
      },
      {
        title: 'Introduction to Hardware and Operating Systems',
        description: `<b>Coursera</b><br/>Foundational knowledge of computer hardware components and OS architecture.<br/>
        <a href="https://coursera.org/verify/AXGM0CIY1V6I" target="_blank" class="text-accent hover:underline font-bold">View Certificate</a>`,
        icon: 'tabler:device-desktop',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1517694712202-14dd9538aa97?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Certifications image',
    }}
  />

  <CallToAction
    id="contact"
    actions={[
      {
        variant: 'primary',
        text: 'Email Me',
        href: 'mailto:shiveksingh43@gmail.com',
        icon: 'tabler:mail',
      },
      {
        variant: 'secondary',
        text: 'LinkedIn',
        href: 'https://www.linkedin.com/in/shivek-singh2707',
        target: '_blank',
        icon: 'tabler:brand-linkedin',
      },
      {
        variant: 'secondary',
        text: 'GitHub',
        href: 'https://github.com/shivek2707',
        target: '_blank',
        icon: 'tabler:brand-github',
      },
    ]}
  >
    <Fragment slot="title">
      Let's Connect
    </Fragment>

    <Fragment slot="subtitle">
      Open to opportunities in Cybersecurity and Backend Development.<br/>
      Drop me an email at: <span class="font-bold text-accent">shiveksingh43@gmail.com</span><br/>
      Or call: <span class="font-bold text-accent">7534827710</span>
    </Fragment>
  </CallToAction>
</Layout>
